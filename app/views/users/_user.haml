%td= link_to user.name, user
%td.text-center= user.games.size
%td
  = link_to image_tag('facebook.png', size: 20), user.facebook_url, target: :x
  &nbsp;
  = mail_to user.email, image_tag('email.png', size: 20)
%td.admin-only
  - if host_or_admin?
    %span.action= link_to image_tag('settings.png', size: 20), edit_user_path(user) if host_or_admin?
    %span &nbsp;&nbsp;
    - confirm = { confirm: 'Are you sure?' }
    %span.action= link_to image_tag('x.png', size: 20), user, method: :delete, data: confirm
