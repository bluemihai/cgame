#left-side
  .upper-left= image_tag('upper.png')
  .content
    .cgame-est= image_tag('cgame_est.png')
    .values
      - VALUES.each do |value|
        .row= value
  .lower-left= image_tag('lower.png')

#right-side
  .upper-right
  #right-side-content
    .main-courses
    %ul.activities= render @activities.order(:id)
  .lower-right

.extra


%h1 Activities

%table
  %thead
    %tr
      %th Name
      %th Description
      %th WC
      %th
      %th
      %th

  %tbody
    - @activities.each do |activity|
      %tr
        %td= link_to activity.name, activity
        %td= simpler_format(activity.description)
        %td= activity.wild_card_weight
        %td= activity.image_url
        %td= link_to 'Show', activity
        %td= link_to 'Edit', edit_activity_path(activity)
        %td= link_to 'Destroy', activity, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Activity', new_activity_path
