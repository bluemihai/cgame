- dec = game.try(:decoration_choice) || Game.rand_decoration
#menu
  #left-side
    .upper-left= image_tag("dec-#{dec}-upper.png")
    .content
      .cgame-est= image_tag('cgame_est.png')
      .values
        - VALUES.each do |value|
          .row= value
    .lower-left= image_tag("dec-#{dec}-lower.png")

  #right-side
    .upper-right.text-center
      - 5.times do
        = image_tag("dec-#{dec}-upper-tiny.png")
    #right-side-content
      .main-courses
        - if host_or_admin? && game
          = link_to image_tag('settings.png', size: 20), edit_game_path(game)
      - activities.each_with_index do |group, g_idx|
        .large-6.medium-6.small-12.columns
          - group.each_with_index do |activity, a_idx|
            = render 'activities/activity', activity: activity, number: g_idx * 3 + a_idx
    .lower-right.text-center
      - 5.times do
        = image_tag("dec-#{dec}-lower-tiny.png")
