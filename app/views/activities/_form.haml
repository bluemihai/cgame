For Wild Cards, make sure WC Weight is 1.
%br
For Main Courses, make sure Main is 'Yes' and you write a haiku
%br
%br

= simple_form_for(@activity) do |f|
  = f.error_notification

  .form-inputs
    .large-3.medium-3.small-6.columns= f.input :name
    .large-1.medium-1.small-6.columns= f.input :initials
    .large-2.medium-3.small-6.columns
      = f.input :wild_card_weight, collection: (0..3), label: 'WC Weight'
    .large-2.medium-2.small-6.columns= f.input :main, as: :select
    .large-2.medium-2.small-6.columns= f.input :basic, as: :select
    .large-2.medium-2.small-6.columns= f.input :mildness, as: :select, collection: [1, 3, 5]
    .large-6.medium-6.small-12.columns
      = f.input :image_url
      = f.input :haiku, input_html: { rows: 3 }
    .large-6.medium-6.small-12.columns
      = f.input :description, input_html: { rows: 10}
  .large-2.medium-2.small-6.columns= f.input :active, as: :select
  %hr
  .form-actions
    = f.button :submit, 'Save'
