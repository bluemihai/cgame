%h1
  Locations
  - if host_or_admin?
    %sup= link_to image_tag('plus.png', size: 12), new_location_path

%table
  %thead
    %tr
      %th Name
      %th Street address
      %th City
      %th State
      %th Zip
      %th
      %th

  %tbody
    - @locations.each do |location|
      %tr
        %td= link_to location.name, location
        %td= location.street_address
        %td= location.city
        %td= location.state
        %td= location.zip
        %td= link_to 'Edit', edit_location_path(location)
        %td= link_to 'Destroy', location, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Location', new_location_path
