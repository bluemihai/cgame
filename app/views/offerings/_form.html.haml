= simple_form_for(@offering) do |f|
  = f.error_notification

  .form-inputs
    .large-6.medium-6.small-12.columns
      = f.input :presenter, label: 'Presenter(s) Name'
      = f.input :name, label: 'Workshop Name'
    .large-6.medium-6.small-12.columns
      .large-3.medium-3.small-12.columns= f.input :price_min
      .large-3.medium-3.small-12.columns= f.association :creator, collection: User.order(:name)
      .large-6.medium-6.small-12.columns= f.input :price_ideal
      .large-6.medium-6.small-12.columns= f.input :hours_min
      .large-6.medium-6.small-12.columns= f.input :hours_ideal
    .large-4.medium-6.small-12.columns= f.input :description, input_html: { rows: 10 }
    .large-4.medium-6.small-12.columns= f.input :other_logistics, input_html: { rows: 10 }
    .large-4.medium-6.small-12.columns= f.input :presenter_bio, input_html: { rows: 10 }

  .form-actions
    = f.button :submit
